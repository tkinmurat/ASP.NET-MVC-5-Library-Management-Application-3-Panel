@using mvcLibrary.Models.Entity
@model List<TblEmployee>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<h2>Employees</h2>

<table class="table table-bordered">
    <tr>
        <th>Employee ID</th>
        <th>Employee Name</th>
        <th>Update</th>
        <th>Remove</th>


    </tr>
    @foreach (var emp in Model)
    {
        <tr>
            <td>@emp.ID</td>
            <td>@emp.Employee</td>
            <td><a href="/Employee/GetEmployee/@emp.ID" class="btn btn-secondary">Update</a></td>
            <td><a href="/Employee/RemoveEmployee/@emp.ID" class="btn btn-danger">Remove</a></td>

        </tr>
    }

</table>
<a href="/Employee/AddNewEmployee/" class="btn btn-primary">Add New Employee</a>