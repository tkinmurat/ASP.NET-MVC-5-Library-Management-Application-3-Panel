@model mvcLibrary.Models.Entity.TblEmployee
@{
    ViewBag.Title = "AddNewEmployee";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Add New Employee</h2>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />

<form class="form-group" method="post">
    <div style="margin-top:15px">
        <label>
            Employee Name
        </label>
        @*<input type="text" class="form-control" name="Employee" />*@
        @Html.TextBoxFor(x => x.Employee, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Employee, "", new { @style = "color:red" })
    </div>

    <div style="margin-top:15px">
        <button class="btn btn-info" id="Btn1">Add Employee</button>
    </div>
</form>
