@using mvcLibrary.Models.Entity
@model List<TblWriter>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<h2>Writers</h2>

<table class="table table-striped">
    <tr style="background-color:#b6ff00">
        <th>ID</th>
        <th>Name</th>
        <th>Last Name</th>
        <th>Detail</th>
        <th>Update</th>
        <th>Remove</th>
    </tr>
    @foreach (var w in Model)
    {
        <tr style="background-color:#efebeb">
            <td>@w.ID</td>
            <td>@w.Name</td>
            <td>@w.LastName</td>
            <td>@w.Detail</td>
            <td><a href="/Writer/GetWriter/@w.ID" class="btn btn-secondary">Update</a></td>
            <td>@Html.ActionLink("Remove", "RemoveWriter", new { id = w.ID }, new { @class = "btn btn-danger", onclick = "return confirm('Do you want to remove?')" })</td>
        </tr>
    }
</table>
<a class="btn btn-primary" href="/Writer/AddNewWriter/">Add New Writer</a>