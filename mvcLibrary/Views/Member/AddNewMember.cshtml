@model mvcLibrary.Models.Entity.TblMembers
@{
    ViewBag.Title = "AddNewMember";
    Layout = "~/Views/Shared/Layout.cshtml";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<h2>Add New Member</h2>


<form class="form-group" method="post">
    <div style="margin-top:15px">
        <label>
            Member Name*
        </label>
        @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Name, "", new { @style = "color:red" })
    </div>

    <div style="margin-top:15px">
        <label>
            Member Last Name*
        </label>
        @Html.TextBoxFor(x => x.LastName, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.LastName, "", new { @style = "color:red" })
    </div>

    <div style="margin-top:15px">
        <label>
            Mail*
        </label>
        @Html.TextBoxFor(x => x.Mail, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Mail, "", new { @style = "color:red" })
    </div>

    <div style="margin-top:15px">
        <label>
            User Name*
        </label>
        @Html.TextBoxFor(x => x.UserName, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.UserName, "", new { @style = "color:red" })
    </div>

    <div style="margin-top:15px">
        <label>
            Password*
        </label>
        @Html.TextBoxFor(x => x.Password, new { @class = "form-control", @type = "password" })
        @Html.ValidationMessageFor(x => x.Password, "", new { @style = "color:red" })
    </div>

    <div style="margin-top:15px">

        <label>
            Photo
        </label>
        @Html.TextBoxFor(x => x.Photo, new { @class = "form-control" })
    </div>

    <div style="margin-top:15px">
        <label>
            Phone Number*
        </label>
        @Html.TextBoxFor(x => x.PhoneNumber, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.PhoneNumber, "", new { @style = "color:red" })
    </div>

    <div style="margin-top:15px">
        <label>
            University
        </label>
        @Html.TextBoxFor(x => x.University, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.University, "", new { @style = "color:red" })
    </div>

    <div style="margin-top:15px">
        <button class="btn btn-info" id="Btn1">Add Member</button>
    </div>
</form>

