@using mvcLibrary.Models.Entity
@model List<TblCategory>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<h2>Categories</h2>

<table class="table table-bordered">
    <tr>
        <th>Category ID</th>
        <th>Category Name</th>
        <th>Update</th>
        <th>Remove</th>


    </tr>
    @foreach (var ctg in Model)
    {
        <tr>
            <td>@ctg.ID</td>
            <td>@ctg.Name</td>
            <td><a href="/Category/GetCategory/@ctg.ID" class="btn btn-secondary">Update</a></td>
            <td><a href="/Category/RemoveCategory/@ctg.ID" class="btn btn-danger">Remove</a></td>

        </tr>
    }

</table>
<a href="/Category/AddNewCategory/" class="btn btn-primary">Add New Category</a>