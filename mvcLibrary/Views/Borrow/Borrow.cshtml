@model mvcLibrary.Models.Entity.TblProcess
@{
    ViewBag.Title = "Borrow";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Borrow</h2>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />

<form class="form-group" method="post">
    <div>


    </div>
    <div style="margin-top:15px">
        <label>Member ID</label>
        @Html.TextBoxFor(b => b.Member, new { @class = "form-control" })
    </div>
    <div style="margin-top:15px">
        <label>Book ID</label>
        @Html.TextBoxFor(b => b.Book, new { @class = "form-control" })

    </div>
    <div style="margin-top:15px">
        <label>Employee ID</label>
        @Html.TextBoxFor(b => b.Employee, new { @class = "form-control" })

    </div>

    <div style="margin-top:15px">
        <label>Borrow Date</label>
        <input type="text" class="form-control" name="BorrowDate" 
               value="@DateTime.Now.ToShortDateString()"/>

    </div>

    <div style="margin-top:15px">
        <label>Due Date</label>
        <input type="text" class="form-control" name="DueDate" 
               value="@DateTime.Now.AddDays(7).ToShortDateString()"/>

    </div>

    <div style="margin-top:15px">
        <button class="btn btn-group" style="background-color:#ff6a00; color:blue">Barrow Book</button>
        <input type="hidden" value="False"name="ProcessSituation">
    </div>
</form>
