@using mvcLibrary.Models.Entity
@model List<TblBook>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />

<h2>Books</h2>
@using (Html.BeginForm("Index", "Book", FormMethod.Get))
{
<div style="margin-top:15px;margin-bottom:15px;">
    <b>Search Book:</b> @Html.TextBox("p")
    <input type="submit" value="Search" />
</div>
}
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Category</th>
        <th>Writer</th>
        <th>Release Year</th>
        <th>Publisher</th>
        <th>Page</th>
        <th>Situation</th>
        <th>Update</th>
        <th>Remove</th>
    </tr>
    @foreach (var b in Model)
    {
       
            <tr>
                <td>@b.ID</td>
                <td>@b.Name</td>
                <td>@b.TblCategory.Name</td>
                <td>@b.TblWriter.Name&nbsp;@b.TblWriter.LastName</td>
                <td>@b.ReleaseYear</td>
                <td>@b.Publisher</td>
                <td>@b.Page</td>
                <td>@b.Situation</td>
                <td><a href="/Book/GetBook/@b.ID" class="btn btn-secondary">Update</a></td>
                <td><a href="/Book/RemoveBook/@b.ID" class="btn btn-danger">Remove</a></td>

            </tr>
        
    }

</table>
<a href="/Book/AddNewBook/" class="btn btn-primary">Add New Book</a>
